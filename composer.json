{
    "name": "haeckel/exception",
    "description": "library that provides utilities and extensions for exceptions.",
    "type": "library",
    "keywords": ["logging", "log", "exception"],
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Dominik HÃ¤ckel"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^12.3",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Haeckel\\Exc\\": "src/",
            "Haeckel\\Exc\\Test\\": "test/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "test": [
            "@putenv XDEBUG_MODE=coverage",
            "vendor/bin/phpunit"
        ],
         "testSilent": [
            "@putenv XDEBUG_MODE=coverage",
            "vendor/bin/phpunit --no-output 2> /dev/null"
        ],
        "phpstan": [
            "vendor/bin/phpstan"
        ],
        "cs": [
            "vendor/bin/phpcs src/"
        ],
        "cbf": [
            "vendor/bin/phpcbf src/"
        ],
        "ci": [
            "@cbf",
            "@cs",
            "@phpstan --no-progress",
            "@test"
        ]
    },
    "archive": {
        "exclude": ["/test/", "phpcs.xml.dist", "phpstan.dist.neon", "phpunit.xml", ".gitignore"]
    }
}
